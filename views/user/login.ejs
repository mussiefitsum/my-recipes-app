<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://res.cloudinary.com/dfuxr1p10/image/upload/v1627919148/MyRecipe/login-card-img_j9c1pl.jpg"
                    alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" novalidate class="validated-form">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" id="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-block">Log In</button>
                        </div>
                    </form>
                    <p class="card-text mt-3">Don't have an account yet?</p>
                    <div class="d-grid gap-2">
                        <a href="/register" class="btn btn-primary btn-block">Register Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>