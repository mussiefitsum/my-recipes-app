<% layout('layouts/boilerplate') %>
<h1 class="mb-4">My Recipes</h1>
<div class="mb-4">
    <a href="/recipes/new" class="btn btn-success">Create A New Recipe</a>
</div>
<% for (let recipe of recipes) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt=""
                src="<%= recipe.images.length > 0 ? recipe.images[0].url : 'https://res.cloudinary.com/dfuxr1p10/image/upload/v1627951151/MyRecipe/default-recipe-big_hnfhhi.png' %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= recipe.name %>
                </h5>
                <p class="card-text">
                    <%= recipe.description %>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        <%= recipe.category %>
                    </small>
                </p>
                <a class="btn btn-primary" href="/recipes/<%= recipe._id %>">View <%= recipe.name %> </a>
            </div>
        </div>
    </div>
</div>
<% } %>