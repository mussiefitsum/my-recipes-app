<% layout('layouts/boilerplate') %>
<h1 class="text-center mb-3">Editing <%= recipe.name %> Recipe </h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <section class="mb-3">
                <label for="name" class="form-label">Recipe Name</label>
                <input type="text" class="form-control" name="recipe[name]" id="name" value="<%=recipe.name%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </section>
            <section class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="recipe[description]" class="form-control" id="description" cols="30" rows="5"
                    required><%= recipe.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </section>
            <section class="mb-3">
                <label for="category" class="form-label">Type of Meal</label>
                <select name="recipe[category]" class="form-select" id="category" required>
                    <% for (let category of categories) { %>
                    <option value="<%= category %>" <%=recipe.category===category ? 'selected' : '' %>>
                        <%= category %>
                    </option>
                    <% } %>
                </select>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </section>
            <section class="mb-3">
                <label for="image" class="form-label">Add More Images</label>
                <input class="form-control" name="image" type="file" id="image" multiple>
            </section>
            <section class="mb-3">
                <label for="ingredients" class="form-label">Ingredients</label>
                <textarea name="recipe[ingredients]" class="form-control" id="ingredients" cols="30" rows="5"
                    required><%= recipe.ingredients %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </section>
            <section class="mb-3">
                <label for="directions" class="form-label">Directions</label>
                <textarea name="recipe[directions]" class="form-control" id="directions" cols="30" rows="5"
                    required><%= recipe.directions %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </section>
            <section class="mb-3">
                <% recipe.images.forEach((img, i) => { %>
                <img src="<%= img.thumbnail %> " alt="" class="img-thumbnail">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                </div>
                <label for="image-<%= i %>">Delete?</label>
                <% }); %>
            </section>
            <section class="mb-3">
                <button class="btn btn-success">Update Recipe</button>
            </section>
        </form>
        <a class="btn btn-danger" href="/recipes/<%= recipe._id %>">Cancel</a>
    </div>
</div>